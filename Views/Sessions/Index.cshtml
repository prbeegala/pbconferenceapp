@model IEnumerable<Session>

@{
    ViewData["Title"] = "Sessions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Conference Sessions</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Submit" class="btn btn-success">Submit Session</a>
    }
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <form asp-action="Index" method="get" class="d-flex flex-wrap gap-3">
            <div class="flex-grow-1">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search sessions..." class="form-control" />
            </div>
            <div>
                <select name="technology" class="form-select">
                    <option value="">All Technologies</option>
                    @foreach (string tech in ViewBag.Technologies)
                    {
                        <option value="@tech" selected="@(tech == ViewData["TechnologyFilter"]?.ToString())">@tech</option>
                    }
                </select>
            </div>
            <div>
                <select name="level" class="form-select">
                    <option value="">All Levels</option>
                    @foreach (SessionLevel level in Enum.GetValues<SessionLevel>())
                    {
                        <option value="@level" selected="@(level.ToString() == ViewData["LevelFilter"]?.ToString())">@level</option>
                    }
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No sessions found</h4>
        <p>Try adjusting your search criteria or check back later for new sessions.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var session in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <small class="text-muted">@session.SessionDate.ToString("MMM dd, yyyy")</small>
                        <small class="text-muted">@session.SessionDate.ToString("HH:mm") - @session.SessionDate.AddMinutes(session.DurationMinutes).ToString("HH:mm")</small>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@session.Title</h5>
                        <p class="card-text">@(session.Description.Length > 120 ? session.Description.Substring(0, 120) + "..." : session.Description)</p>
                        <p class="card-text"><small class="text-muted">by @session.SpeakerName</small></p>
                        <p class="card-text"><small class="text-muted">Room: @session.Room | Duration: @session.DurationMinutes min</small></p>
                        
                        <div class="mt-auto">
                            <div class="d-flex flex-wrap gap-2 mb-2">
                                <span class="badge bg-primary">@session.Technology</span>
                                <span class="badge bg-secondary">@session.Level</span>
                                @if (session.IsFull)
                                {
                                    <span class="badge bg-danger">Full</span>
                                }
                                else if (session.AvailableSpots <= 5)
                                {
                                    <span class="badge bg-warning text-dark">Almost Full</span>
                                }
                            </div>
                            
                            <div class="progress mb-2" style="height: 5px;">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @((double)session.CurrentRegistrationCount / session.MaxAttendees * 100)%"
                                     aria-valuenow="@session.CurrentRegistrationCount" 
                                     aria-valuemin="0" 
                                     aria-valuemax="@session.MaxAttendees">
                                </div>
                            </div>
                            <small class="text-muted">@session.CurrentRegistrationCount / @session.MaxAttendees registered</small>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}