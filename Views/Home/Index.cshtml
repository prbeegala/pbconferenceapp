@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron bg-primary text-white p-5 rounded mb-4">
    <div class="container">
        <h1 class="display-4">Best Team of 2026</h1>
        <p class="lead">Join us for the premier technology conference featuring the latest in software development, cloud computing, and emerging technologies.</p>
        <p class="lead">June 15-17, 2026 | Sweden</p>
        <a class="btn btn-light btn-lg" asp-controller="Sessions" asp-action="Index" role="button">View Sessions</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-outline-light btn-lg ms-2" asp-area="Identity" asp-page="/Account/Register" role="button">Register Now</a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalSessions</h2>
                <p class="card-text">Total Sessions</p>
                <a asp-controller="Sessions" asp-action="Index" class="btn btn-primary">Explore Sessions</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalRegistrations</h2>
                <p class="card-text">Registrations</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Sessions" asp-action="MyRegistrations" class="btn btn-primary">My Registrations</a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login to Register</a>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title">Submit</h2>
                <p class="card-text">Your Session</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Sessions" asp-action="Submit" class="btn btn-primary">Submit Session</a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login to Submit</a>
                }
            </div>
        </div>
    </div>
</div>

@if (ViewBag.UpcomingSessions != null && ((IEnumerable<Session>)ViewBag.UpcomingSessions).Any())
{
    <div class="row mt-5">
        <div class="col-12">
            <h2>Upcoming Sessions</h2>
            <div class="row">
                @foreach (Session session in (IEnumerable<Session>)ViewBag.UpcomingSessions)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <small class="text-muted">@session.SessionDate.ToString("MMM dd, yyyy HH:mm")</small>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@session.Title</h5>
                                <p class="card-text">@session.Description.Substring(0, Math.Min(session.Description.Length, 100))...</p>
                                <p class="card-text"><small class="text-muted">by @session.SpeakerName</small></p>
                                <div class="mt-auto">
                                    <span class="badge bg-info">@session.Technology</span>
                                    <span class="badge bg-secondary">@session.Level</span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Sessions" asp-action="Details" asp-route-id="@session.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                                <small class="text-muted float-end">@session.AvailableSpots spots left</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center">
                <a asp-controller="Sessions" asp-action="Index" class="btn btn-primary">View All Sessions</a>
            </div>
        </div>
    </div>
}
